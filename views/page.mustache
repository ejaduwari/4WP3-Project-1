<!DOCTYPE html>
<html>
<head>
    <title>JIM</title>
    <style>
        input{
            width: 55px;
        }

        h2{
            padding: 0;
            margin: 0;
        }

        #history{
            margin-top: 30px;
        }
    </style>
</head>
<body>
    <h1> JIM - Your fitness tracker </h1>

    <div>
        <h2>Your Workout</h2>

        <form action ="/exerciseData">
            <select name="exercise">
                <option value=""> Choose Exercise </option>
                {{ #options }}
                    <option value="{{ Exercise }}"> {{ Exercise }} </option></a>
                {{ /options }}
            </select> 

            <label for="weight">Weight:</label>
            <input type="text" name="weight" placeholder="kgs">

            <label for="set1">Set 1:</label>
            <input type="text" name="set1" placeholder="# of reps">

            <label for="set2">Set 2:</label>
            <input type="text" name="set2" placeholder="# of reps">

            <label for="set3">Set 3:</label>
            <input type="text" name="set3" placeholder="# of reps">

            <label for="rpe">RPE:</label>
            <input type="text" name="rpe" placeholder="# of reps">

            <input type="submit"> </br>
        </form>

        <a href="/newExercise">Add Exercise</a>

        {{ #addExercise }}
            <form action="/addExercise">
                <label for="name">Name</label>
                <input type="text" name="name">
                <input type="submit">
            </form>
        {{ /addExercise }}
    </div>   

    <div id="history">
        <h2>Workout History</h2>
        <form action ="/#">
            <select name="exercise">
                <option value=""> Choose Exercise </option>
                {{ #options }}
                    <option value="{{ Exercise }}"> {{ Exercise }} </option></a>
                {{ /options }}
            </select>

            <input type="submit">
        </form>
    </div>
</body>
</html>